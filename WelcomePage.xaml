<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WelcomePage"
             Title="Welcome Page"
             BackgroundColor="Teal">
    
    <StackLayout VerticalOptions="Center"
                 Margin="25"
                 Spacing="0">

        <Image Source="welcome.png"
               VerticalOptions="Fill"
               HeightRequest="350"
               WidthRequest="350"
               Margin="0,0,0,50"/>

        <Label Text="Weather"
               FontAttributes="Bold"
               FontSize="45"
               TextColor="#ffca28"/>

        <Label Text="Forecast App"
               FontAttributes="Bold"
               FontSize="40"
               TextColor="AntiqueWhite"/>

        <Label Text="Your reliable source for accurate, real-time weather updates and forecasts for any location worldwide!"
               TextColor="AntiqueWhite"
               FontSize="Small"/>

        <Button x:Name="forecastBtn"
                Text="Check Forecast"
                TextColor="Teal"
                FontSize="Large"
                BackgroundColor="#ffca28"
                WidthRequest="250"
                Margin="0,60,0,0"
                Clicked="forecastBtn_Clicked"/>

    </StackLayout>
</ContentPage>